    </LinearLayout>


    <ayar.oktay.advancedtextview.AdvancedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/very_long_text"
        app:font="roboto_regular"
        app:justifyText="false"
        />

</LinearLayout>