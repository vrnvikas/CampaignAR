<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/row_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_favorite_border_deep_orange_600_36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/row_image_view"
        android:layout_toEndOf="@+id/row_image_view"
        android:text="2/6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/row_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/row_image_view_rightArrow"
        android:layout_toStartOf="@+id/row_image_view_rightArrow"
        android:text="View Badges"
        android:layout_centerVertical="true"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/row_image_view_rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_keyboard_arrow_right_orange_600_36dp" />

</RelativeLayout>